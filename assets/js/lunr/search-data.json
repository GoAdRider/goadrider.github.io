---
layout: null
permalink: /assets/js/lunr/search-data.json
---
{
    "items": [
        {% assign docs = site.documents | where_exp:'doc','doc.search != false' %
        }
  {% assign posts = site.posts | where_exp:'post','post.search != false' %
        }
  {% assign pages = site.pages | where_exp:'page','page.search != false' %
        }
  
  {% assign all_items = '' | split: '' %
        }
  {% assign all_items = all_items | concat: docs %
        }
  {% assign all_items = all_items | concat: posts %
        }
  {% assign all_items = all_items | concat: pages %
        }
  
  {% for item in all_items %
        }
    {
            "title": {
                { item.title | jsonify
                }
            },
            "url": {
                { item.url | absolute_url | jsonify
                }
            },
            {% if item.excerpt %
            }
        "excerpt": {
                { item.excerpt | strip_html | truncatewords: 20 | jsonify
                }
            },
            {% else %
            }
        "excerpt": {
                { item.content | strip_html | truncatewords: 20 | jsonify
                }
            },
            {% endif %
            }
      {% if item.categories %
            }
        "categories": {
                { item.categories | jsonify
                }
            },
            {% else %
            }
        "categories": [],
            {% endif %
            }
      {% if item.tags %
            }
        "tags": {
                { item.tags | jsonify
                }
            },
            {% else %
            }
        "tags": [],
            {% endif %
            }
      {% if item.header.teaser %
            }
        "teaser": {
                { item.header.teaser | absolute_url | jsonify
                }
            }
      {% else %
            }
        "teaser": null
      {% endif %
            }
        }{% unless forloop.last %
        },
        {% endunless %
        }
  {% endfor %
        }
    ]
}